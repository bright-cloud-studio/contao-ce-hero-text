{
    "name":"bright-cloud-studio/contao-ce-hero-text",
    "type": "contao-bundle",
    "description":"Adds a new Hero Text content element type to Contao.",
    "homepage": "http://brightcloudstudio.com/",
    "license": "LGPL-3.0-or-later",
    "keywords": [
        "contao",
        "content element",
        "bright",
        "cloud",
        "studio"
    ],
    "authors": [
        {
            "name": "Bright Cloud Studio",
            "homepage": "https://brightcloudstudio.com",
            "email": "mark@brightcloudstudio.com",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/bright-cloud-studio/contao-ce-hero-text/issues",
        "source": "https://github.com/bright-cloud-studio/contao-ce-hero-text"
    },
    "require": {
        "php": "^7.4 || ^8.0",
        "contao/core-bundle": "^4.13"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Bcs\\ContaoCEHeroText\\": "src"
        }
    },
    "config": {
        "allow-plugins": {
            "contao/manager-plugin": true
        }
    },
    "extra": {
        "contao-manager-plugin": "Bcs\\ContaoCEHeroText\\ContaoManager\\Plugin"
    }
}
